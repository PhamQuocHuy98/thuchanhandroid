<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LayoutMorong">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red"
        android:text="Red"
        android:textSize="30sp"
        android:background="@color/colorRed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>
    <TextView
        android:id="@+id/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:textSize="30sp"
        android:background="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@+id/red"
        app:layout_constraintLeft_toRightOf="@id/red"


        >
    </TextView>
    <TextView
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorYellow"
        android:textSize="30sp"
        android:text="Yellow"
        app:layout_constraintTop_toBottomOf="@+id/orange"
        app:layout_constraintLeft_toRightOf="@id/orange"
        >
    </TextView>
    <TextView
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@color/colorGreen"
        android:text="Green"
        app:layout_constraintTop_toBottomOf="@+id/yellow"
        app:layout_constraintLeft_toRightOf="@id/yellow"
        >
    </TextView>
    <TextView
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@color/colorBlue"
        android:text="Blue"
        app:layout_constraintTop_toBottomOf="@+id/green"
        app:layout_constraintRight_toLeftOf="@id/green"
        >
    </TextView>
    <TextView
        android:id="@+id/indio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@color/colorIndio"
        android:text="Indio"
        app:layout_constraintTop_toBottomOf="@+id/blue"
        app:layout_constraintRight_toLeftOf="@id/blue"
        >
    </TextView>
    <TextView
        android:id="@+id/violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@color/colorViolet"
        android:text="Violet"
        app:layout_constraintTop_toBottomOf="@+id/indio"
        app:layout_constraintRight_toLeftOf="@id/indio"
        >
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>